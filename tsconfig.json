{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "declaration": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["server/src/**/*.ts", "client/src/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
